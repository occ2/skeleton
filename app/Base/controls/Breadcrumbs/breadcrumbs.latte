<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    {foreach  $data as $key=>$value}
        {if !$value->active}
            <li data-key="{$key}" class="breadcrumb-item active" aria-current="page">
                {$value->name|translate}{ifset $appendedTexts[$key]}{$appendedTexts[$key]}{/ifset}
            </li>
        {else}
            <li data-key="{$key}" class="breadcrumb-item">
                <a {if $value->ajax==true}class="ajax"{/if} href="{$value->href}">{$value->name|translate}{ifset $appendedTexts[$key]}{$appendedTexts[$key]}{/ifset}</a>
            </li>
        {/if}
    {/foreach}
  </ol>
</nav>